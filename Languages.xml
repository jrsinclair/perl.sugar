		<root-zone>sourcecode.perl</root-zone>
		<detectors>
			<extension casesensitive="false">pl</extension>
			<extension casesensitive="false">pm</extension>
			<extension casesensitive="false">cgi</extension>
		</detectors>
		<meta>
		    <name>
		        perl
		    </name>
		    <description>
		        Official perl.sugar for Espresso.
		    </description>
		    <author>
		        Markus Zeller
		    </author>
		    <identifier>
		        com.markuszeller.Sugar.perl
		    </identifier>
		    <version status="preview">
		        0.11
		    </version>
